<%- include('../base_header'); -%>

<body>

    <h1>Listado Locales</h1>

    <div class="container">

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Esta Abierto</th>
                </tr>
            </thead>
            <tbody>
                <% for (var i = 0; i < locales.length; i++) { %>
                    <tr>
                        <td><%= locales[i]._id %></td>
                        <td><%= locales[i].nombre %></td>
                        <td><%= locales[i].estaAbierto %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>

    </div>
</body>
<%- include('../base_footer'); -%>